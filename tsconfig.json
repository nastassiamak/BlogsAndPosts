{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/core/types/*.d.ts"],
  "exclude": ["__tests__", "dist", "node_modules"]

  // "files": ["index.d.ts"] //path (e.g.: "src/core/types/index.d.ts")
}
